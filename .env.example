# API Configuration
# Choose one of the following modes: 'direct' or 'mock'
VITE_API_MODE=mock

# Direct BiAPI Configuration (when VITE_API_MODE=direct)
# Your BiAPI domain (without https://)
VITE_API_DOMAIN=mysandbox.biapi.pro
# Your user ID from BiAPI
VITE_USER_ID=1
# Your Bearer token for authentication
VITE_BEARER_TOKEN=your_bearer_token_here
# Your Client ID for API operations
VITE_CLIENT_ID=your_client_id_here
# Your Client Secret for user creation operations (optional)
VITE_CLIENT_SECRET=your_client_secret_here
# Users Token for listing users (optional)
VITE_USERS_TOKEN=your_users_token_here

# Development Settings
# Set to 'true' to enable debug logging
VITE_DEBUG=false
